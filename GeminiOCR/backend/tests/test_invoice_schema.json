{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invoice Data Schema",
  "type": "object",
  "properties": {
    "invoice_info": {
      "type": "object",
      "properties": {
        "invoice_number": {
          "type": "string",
          "description": "发票号码"
        },
        "invoice_date": {
          "type": "string",
          "format": "date",
          "description": "发票日期"
        },
        "invoice_type": {
          "type": "string",
          "description": "发票类型"
        }
      },
      "required": ["invoice_number", "invoice_date"]
    },
    "supplier": {
      "type": "object",
      "properties": {
        "company_name": {
          "type": "string",
          "description": "供应商公司名称"
        },
        "address": {
          "type": "string",
          "description": "供应商地址"
        },
        "tax_id": {
          "type": "string",
          "description": "供应商税号"
        }
      },
      "required": ["company_name"]
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "客户名称"
        },
        "address": {
          "type": "string",
          "description": "客户地址"
        }
      },
      "required": ["name"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "商品描述"
          },
          "quantity": {
            "type": "number",
            "description": "数量"
          },
          "unit_price": {
            "type": "number",
            "description": "单价"
          },
          "amount": {
            "type": "number",
            "description": "金额"
          }
        },
        "required": ["description", "quantity", "unit_price", "amount"]
      }
    },
    "totals": {
      "type": "object",
      "properties": {
        "subtotal": {
          "type": "number",
          "description": "小计"
        },
        "tax_amount": {
          "type": "number",
          "description": "税额"
        },
        "total": {
          "type": "number",
          "description": "总计"
        }
      },
      "required": ["subtotal", "total"]
    }
  },
  "required": ["invoice_info", "supplier", "items", "totals"]
}